<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <SurfaceView
        android:id="@+id/previewSV"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#90404040" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="#90404040" />

            <ImageView
                android:id="@+id/dgonlam_camera_iv_shadePic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dgonlam_ic_idcard_person" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="#90404040" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#90404040"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dgonlam_camera_tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="20dp"
                android:text="取消"
                android:textColor="#fff"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/dgonlam_camera_iv_takePhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:src="@drawable/dgonlam_ic_camera_white_72" />
        </RelativeLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/dgonlam_camera_iv_flash"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top|right"
        android:layout_margin="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/shape_r50_black"
        android:padding="10dp"
        android:src="@drawable/dgonlam_ic_flash_white_128"
        android:visibility="gone" />
</FrameLayout>